# Frontend Environment Variables - Phase 3

# ============================================
# API Configuration (REQUIRED)
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8001
NEXT_PUBLIC_CHAT_ENDPOINT=http://localhost:8001/api/chat

# Production values (update when deploying):
# NEXT_PUBLIC_API_URL=https://your-backend.railway.app
# NEXT_PUBLIC_CHAT_ENDPOINT=https://your-backend.railway.app/api/chat

# ============================================
# Chat UI Configuration (Optional)
# ============================================
NEXT_PUBLIC_CHAT_THEME=default
# Options: default, dark, light, custom

NEXT_PUBLIC_CHAT_MAX_MESSAGE_LENGTH=1000
NEXT_PUBLIC_CHAT_MAX_HISTORY=50

# ============================================
# Feature Flags (Optional)
# ============================================
NEXT_PUBLIC_ENABLE_SPLIT_VIEW=true
NEXT_PUBLIC_ENABLE_VOICE_INPUT=false
NEXT_PUBLIC_ENABLE_MULTI_LANGUAGE=false

# ============================================
# Analytics (Optional)
# ============================================
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxx

# ============================================
# Error Tracking (Optional)
# ============================================
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# ============================================
# Development Settings
# ============================================
NEXT_PUBLIC_DEBUG=false
# Set to true to enable debug logging in browser console

